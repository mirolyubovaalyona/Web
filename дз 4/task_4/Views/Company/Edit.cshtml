@model task_4.Models.Entities.Company
@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-controller="Company" asp-action="Edit">
	<div class="form-group">
		<label asp-for="Name" class="custom-control-label">Имя</label>
		<input type="text" asp-for="Name" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Address" class="custom-control-label">Адрес</label>
		<input type="text" asp-for="Address" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="DateOfEnd" class="custom-control-label">Дата последнего заказа</label>
		<input type="date" asp-for="DateOfEnd" class="form-control" />
	</div>
	<div class="form-group">
		<input type="submit" value="Send" class="btn" />
	</div>
</form>

<div>
	<a class="nav-link text-dark" asp-area="" asp-controller="Company" asp-action="Index">Back</a>
</div>